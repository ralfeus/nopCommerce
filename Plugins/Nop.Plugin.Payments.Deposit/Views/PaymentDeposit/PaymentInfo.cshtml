@{
    Layout = "";
}
@model Nop.Plugin.Payments.Deposit.Models.PaymentInfoModel
<table width="100%" cellpadding="0" cellspacing="0">
  <tr>
    <td colspan="2">
      @Html.Raw(Model.DescriptionText)
    </td>
  </tr>
  <tr>
    <td>@Html.LabelFor(model => model.CurrentDepositAmount)</td>
    <td>@Html.Raw(Model.CurrentDepositAmount)</td>
  </tr>
  <tr>
    <td>@Html.LabelFor(model => model.OrderTotal)</td>
    <td>@Html.Raw(Model.OrderTotal)</td>
  </tr>
  <tr>
    <td>@Html.LabelFor(model => model.FutureDepositAmount)</td>
    <td>@Html.Raw(Model.FutureDepositAmount)</td>
  </tr>
</table>


